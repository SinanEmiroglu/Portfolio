@inject HttpClient _client

<div class="jobs-container">
    <CascadingValue Value="this">
        @ChildContent
    </CascadingValue>
</div>

@code {
    [Parameter] public List<JobModel> Jobs { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback<JobModel> OnStatusUpdated { get; set; }

    public JobModel Payload { get; set; }

    public async Task UpdateJobAsync(JobStatus status) {
        var task = Jobs.FirstOrDefault(x => x.Id == Payload.Id);

        if (task != null) {
            task.Status = status;
            task.LastEditDate = DateTime.Now;

            await _client.PutAsJsonAsync($"api/job/edit/{task.Id}", task);

            await OnStatusUpdated.InvokeAsync(Payload);
        }
    }
}